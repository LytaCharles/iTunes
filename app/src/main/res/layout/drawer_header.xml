<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:background="@drawable/drawerbackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iTunes"
        android:textSize="25sp"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp"/>





        <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/coverart"
        android:id="@+id/userdrawerprofile_id"/>


        <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/userdrawerprofile_id"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical">


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_drawerprofileusername_id"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:textStyle="italic"
            android:text="Charlow"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_useremail_id"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:textStyle="normal"
            android:text="charles@android.com"/>

    </LinearLayout>

   </RelativeLayout>





</RelativeLayout>